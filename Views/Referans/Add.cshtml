@model Cms.Web.ViewModel.ReferansViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="Add" class="form-control" asp-controller="Referans" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleInputEmail1">Referans ismi</label>
        <input asp-for="Name" class="form-control" placeholder="" style="border-style: solid;border-width: 1px; background-color :#f2f2f2;">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <div class="mb-3">
            <label for="formFileLg" class="form-label">Resim</label>
            <input class="form-control form-control-lg" asp-for="Image" type="file">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
