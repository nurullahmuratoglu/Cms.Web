@model Policlinic
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Update</h1>

<form asp-action="Update" asp-controller="Policlinic">
    <div class="form-group">
        <label for="exampleInputEmail1">Polikilinik İsmi</label>
        <input asp-for="Name" class="form-control" placeholder="">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Açıklama</label>
        <input asp-for="Description" class="form-control" placeholder="">
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>