@model List<Blog>
@{
    ViewData["Title"] = "WebSiteIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="section blog-wrap">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        
                    
                    <div class="col-lg-12 col-md-12 mb-5">
                        <div class="blog-item">
                            <div class="blog-thumb">
                                <img src="~/images/@item.ImagePath" alt="" class="img-fluid ">
                            </div>

                            <div class="blog-item-content">
                                <div class="blog-item-meta mb-3 mt-4">
                                    <span class="text-muted text-capitalize mr-3"><i class="icofont-comment mr-2"></i>5 Comments</span>
                                    <span class="text-black text-capitalize mr-3"><i class="icofont-calendar mr-1"></i> @item.Sendtime</span>
                                </div>

                                <h2 class="mt-3 mb-3"><a href="blog-single.html">@item.Title.ToUpper()</a></h2>

                                    <p class="mb-4">@item.Content.ToString().Substring(0, (item.Content.Length > 150) ? 150 : item.Content.Length )...</p>

                                <a  asp-action="WebSiteDetail" asp-controller="Blog" asp-route-id="@item.Id" class="btn btn-main btn-icon btn-round-full">Devamını Oku.. <i class="icofont-simple-right ml-2  "></i></a>
                            </div>
                        </div>
                    </div>
                    }
                  

                </div>
            </div>
        </div>
    </div>
</section>