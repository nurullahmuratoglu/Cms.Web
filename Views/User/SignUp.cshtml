@model Cms.Web.ViewModel.UserViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SignUp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

</head>
<body>

    <div class="vh-100 d-flex justify-content-center align-items-center">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-12 col-md-8 col-lg-6">
                    <div class="card bg-white">
                        <div class="card-body p-5">
                            <form class="mb-3 mt-md-4" asp-controller="User" asp-action="SignUp" method="post">
                                <h2 class="fw-bold mb-2 text-uppercase ">Selam</h2>
                                <p class=" mb-5">Lütfen kullanıcı adı ve şifrenizi girerek kayıt olun</p>
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label ">İsim</label>
                                    <input class="form-control" asp-for="Name" placeholder="İsim">
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>                                
                                <div class="mb-3">
                                    <label asp-for="SurName" class="form-label ">Soyİsim</label>
                                    <input class="form-control" asp-for="SurName" placeholder="Soyİsim">
                                    <span class="text-danger" asp-validation-for="SurName"></span>
                                </div>                                
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label ">Email</label>
                                    <input class="form-control" asp-for="Email" placeholder="Email">
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label ">Password</label>
                                    <input type="password" class="form-control" asp-for="Password" placeholder="*******">
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-outline-dark" formmethod="post">Kayıt Ol</button>

                                </div>
                            </form>
                            <div>
                                <p class="mb-0  text-center">
                                    Hesapınız var mı? <a asp-controller="User" asp-action="Login" class="text-primary fw-bold">
                                        Giriş
                                        Yapın..
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
