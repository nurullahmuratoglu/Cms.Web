@model Cms.Web.ViewModel.DoctorViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Add</h1>

<form asp-action="Add" class="form-control" asp-controller="Doctor" enctype="multipart/form-data">
    <div class="form-group">
        <label for="exampleInputEmail1">Doktor İsmi</label>
        <input asp-for="FullName" class="form-control" placeholder="" style="border-style: solid;border-width: 1px; background-color :#f2f2f2;">
        <span class="text-danger" asp-validation-for="FullName"></span>
    </div>
    <div class="form-group">
        <select class="form-select" asp-for="title">
            <option value="Dr">Dr</option>
            <option value="Uzm. Dr.">Uzm. Dr.</option>
            <option value="Op. Dr.">Op. Dr.</option>
            <option value="Doç. Dr.">Doç. Dr.</option>
            <option value="Prof. Dr.">Prof. Dr.</option>
            <option value="Psikolog">Psikolog</option>
            
        </select>
        <br />
        <span class="text-danger" asp-validation-for="title"></span>
        <br />
        <select class="form-select" asp-for="PoliclinicId" asp-items="@ViewBag.policlinicselect">
            <option value="">Policlinic seçiniz</option>
        </select>
        
        <span class="text-danger" asp-validation-for="PoliclinicId"></span>
        <div class="mb-3">
            <label for="formFileLg" class="form-label">Resim</label>
            <input class="form-control form-control-lg" asp-for="Image" type="file">

        </div>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>