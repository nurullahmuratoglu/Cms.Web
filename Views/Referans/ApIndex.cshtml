@model List<Referans>
@{
    ViewData["Title"] = "ApIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>ApIndex</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">İsmi</th>

            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td><a asp-action="Delete" asp-controller="Referans" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Referans" asp-action="Add" class="btn btn-primary btn-lg btn-block">Referans Ekle</a>