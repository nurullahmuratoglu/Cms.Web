@model List<ContactForm>
@{
    ViewData["Title"] = "APIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">İsim Soyisim</th>
            <th scope="col">Email</th>
            <th scope="col">Konu</th>
            <th scope="col">Telefon Numarası</th>
            <th scope="col">mesaj</th>
            <th scope="col">Tarih</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.Topic</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Message.ToString().Substring(0, (item.Message.Length > 20) ? 20 : item.Message.Length )</td>
                <td>@item.SendDate</td>
                <td><a asp-action="Details" asp-controller="Contact" asp-route-id="@item.Id" class="btn btn-info">Detay</a></td>
            </tr>
        }
    </tbody>
</table>