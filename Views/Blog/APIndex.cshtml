@model List<Blog>
@{
    ViewData["Title"] = "APIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Konu</th>
            <th scope="col">İçerik</th>
            <th scope="col">Tarih</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.Subject</td>
                <td>@item.Content.ToString().Substring(0, (item.Content.Length > 20) ? 20 : item.Content.Length )</td>
                <td>@item.Sendtime</td>
                <td><a asp-action="Details" asp-controller="Blog" asp-route-id="@item.Id" class="btn btn-outline-info">Detay</a></td>
                <td><a asp-action="Delete" asp-controller="Blog" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Blog" asp-action="Add" class="btn btn-primary btn-lg btn-block">Blog Ekle</a>