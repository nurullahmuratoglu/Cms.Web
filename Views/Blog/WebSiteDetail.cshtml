@model Cms.Web.ViewModel.BlogViewModel
@{
    ViewData["Title"] = "WebSiteDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section blog-wrap">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-lg-12 mb-5">
                        <div class="single-blog-item">
                            <img src="~/images/@Model.ImagePath" alt="" class="img-fluid">

                            <div class="blog-item-content mt-5">
                                <div class="blog-item-meta mb-3">
                                    <span class="text-muted text-capitalize mr-3"><i class="icofont-comment mr-2"></i>5 Comments</span>
                                    <span class="text-black text-capitalize mr-3"><i class="icofont-calendar mr-2"></i> @Model.Sendtime</span>
                                </div>

                                <h2 class="mb-4 text-md"><a href="blog-single.html">@Model.Title</a></h2>


                                <p>
                                    @Model.Content
                                </p>


                                <div class="mt-5 clearfix">
                                    <ul class="float-left list-inline tag-option">
                                        <li class="list-inline-item"><a href="#!">@Model.Subject</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <div class="comment-area mt-4 mb-5">
                            
                            <ul class="comment-tree list-unstyled">
                                @foreach (var item in Model.Comments)
                                {
                                    
                                
                                <li>
                                    <div class="comment-area-box d-block d-sm-flex">


                                        <div class="block">
                                            <div class="comment-info">
                                                <h5 class="mb-1">@item.FullName</h5>
                                                <span class="date-comm">@item.Created</span>
                                            </div>

                                            <div class="comment-meta mt-2">
                                                <a href="#!"><i class="icofont-reply mr-2 text-muted"></i>Yanıtla </a>
                                            </div>

                                            <div class="comment-content mt-3">
                                                <p>@item.Opinion </p>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                }
                            </ul>

                        </div>
                    </div>


                    <div class="col-lg-12">
                        <form class="comment-form my-5" asp-action="Add" asp-controller="Comment" method="post">
                            <input type="hidden" asp-for="@Model.Id" />
                            <h4 class="mb-4">Yorum Yazın</h4>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input class="form-control" type="text" name="FullName" id="FullName" placeholder="FullName:">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <input class="form-control" type="text" name="Email" id="Email" placeholder="Email:">
                                    </div>
                                </div>
                            </div>


                            <textarea class="form-control mb-4" name="Opinion" id="Opinion" cols="30" rows="5"
                                      placeholder="Comment"></textarea>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
